//@version=5
indicator("Example Entry Alert", overlay=true)

// Input parameters
rsiLength = input.int(14, "RSI Length")
rsiOverbought = input.int(70, "RSI Overbought")
rsiOversold = input.int(30, "RSI Oversold")

// Calculate indicators
rsi = ta.rsi(close, rsiLength)
ema = ta.ema(close, 20)

// Generate signals
longCondition = ta.crossover(rsi, rsiOversold) and close > ema
shortCondition = ta.crossunder(rsi, rsiOverbought) and close < ema

// Plot signals
plotshape(longCondition, "Long Signal", shape.triangleup, location.belowbar, color.green, size=size.small)
plotshape(shortCondition, "Short Signal", shape.triangledown, location.abovebar, color.red, size=size.small)

// Alert conditions
alertcondition(longCondition, "Long Entry Signal", "Potential long entry opportunity detected")
alertcondition(shortCondition, "Short Entry Signal", "Potential short entry opportunity detected")

// Plot indicators
plot(ema, "EMA", color=color.blue)
hline(rsiOverbought, "RSI Overbought", color=color.red)
hline(rsiOversold, "RSI Oversold", color=color.green)